<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    tools:context=".LoginSignUp.Splash.SplashActivity">

    <carbon.widget.TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="InstaPack"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_20sdp"
        app:carbon_elevation="5dp"
        app:carbon_elevationShadowColor="@color/colorPrimary"
        app:fontPath="IRANSansMobileFonts/IRANSansMobile(FaNum)_Bold.ttf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

</carbon.widget.ConstraintLayout>